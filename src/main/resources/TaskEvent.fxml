<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<Scene xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
      <AnchorPane prefHeight="200" prefWidth="200">
      <children>
         <VBox prefHeight="200.0" prefWidth="200.0">
            <children>
               <HBox alignment="CENTER_LEFT" prefHeight="32.0" prefWidth="200.0">
                  <children>
                     <ComboBox fx:id="menu" prefWidth="150.0" promptText="Select Task or Event">
                      <items>
                      <FXCollections fx:factory="observableArrayList">
                          <String fx:value="Java" />
                          <String fx:value="JavaScript" />
                          <String fx:value="C#" />
                          <String fx:value="Python" />
                      </FXCollections>
                      </items>
                     </ComboBox>
                  </children>
               </HBox>
               <HBox prefHeight="28.0" prefWidth="200.0">
                  <children>
                     <TextField promptText="Name of Event/Task" />
                  </children>
               </HBox>
               <HBox prefHeight="29.0" prefWidth="200.0">
                  <children>
                     <TextArea prefHeight="51.0" prefWidth="200.0" promptText="Description (Optional)" />
                  </children>
               </HBox>
               <HBox alignment="BOTTOM_CENTER" prefHeight="105.0" prefWidth="200.0">
                  <children>
                     <Button fx:id="close" mnemonicParsing="false" text="Close" />
                  </children>
               </HBox>
            </children>
         </VBox>
      </children>
   </AnchorPane>
  </Scene>
